header.header
  .row
    .col-sm-4.col-xs-5.logo.left
      +link-img('logo-loreal.png', 'LOREAL Business School', '/home.html').text-middle
    .col-sm-8.col-xs-7.logo.right
      .logo-center
        +link-img('logo-check-mysalon.png', 'Check My Salon').logo-mysalon
    .header-bottom
      ul.utility
        li
          +link-utility('logout','javascript:void(0);')(data-toggle="opening-modal", data-target="confirm-modal", data-content="Do you really want to quit you session?", data-backdrop=true, data-href="landing.html").icon-logout.icon-responsive
        li
          +link-utility('setting', 'javascript:void(0);')(data-toggle="opening-modal", data-target="setting-modal").icon-setting.icon-responsive
