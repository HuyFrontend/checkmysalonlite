mixin img(src, alt)
  - if (typeof(src) === 'undefined') src = 'transparent.png'
  - if (typeof(alt) === 'undefined') alt = ''
  img(src="images/#{src}", alt="#{alt}")&attributes(attributes)

mixin img-upload(src, alt)
  - if (typeof(src) === 'undefined') src = 'images/transparent.png'
  - if (typeof(alt) === 'undefined') alt = ''
  img(src="images/upload/#{src}", alt="#{alt}", class="img-responsive")&attributes(attributes)
