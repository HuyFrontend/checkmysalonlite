mixin thumbnail(url_image,title,percent,id)
  .thumbnails(data-toggle="modal",data-quiz-trigger="true", data-quiz-id="#{id}", data-category-id="#{id}")
    .image
      +img-upload(url_image,title).img-desktop
      +img-upload(url_image,title).img-mobile
    .content
      h3.headline-2!=title
      p.score
        span!=percent
        | &nbsp;/&nbsp;100

mixin popup-send-email()
  #email-message.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel')
    .content
      .wi-icon.close(data-dismiss='modal')
      span.wi-icon.icon-1
      p
        | An email with your password has been sent to you

mixin input-text(name, id)
  - if (typeof(id) === 'undefined') id = name
  .form-group
    label.control-label.col-sm-3(for=id)!=name
    .col-sm-9
      input.form-control(type='text', id=id, placeholder=name, name=name , value='')

